/**index.wxss**/
.swiper-item{
    display: block;
    height: 100%;
    width: 100%;
}

.swiper_nav{
    height: 100%;
    width:100%;
    position: relative;
    top: -40px;
}

.swiper_img{
    height: 200px;
    width: 100%;
}
.swiper_txt{
    display: flex;
    justify-content:center;
    color:floralwhite;
    font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif Georgia;
    font-size: 18px;
    font-weight:bolder;
    position: relative;
    top: 200px;
    background-color:darkgray;
    background: rgba(0, 0, 0, 0.5);
    padding-bottom: 30px;
}
